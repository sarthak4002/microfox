{
  "name": "microfox-scripts",
  "version": "1.0.0",
  "description": "Scripts for Microfox package documentation updates",
  "scripts": {
    "build": "tsc",
    "process-issue": "ts-node src/process-issue.ts",
    "process-comment": "ts-node src/process-comment.ts",
    "gen:pkg-build": "ts-node src/fixBuildIssues.ts",
    "gen:pkg-fix": "ts-node src/fixPackage.ts",
    "gen:pkg": "ts-node src/genPackage.ts",
    "gen:pkg-oauth": "ts-node src/genOAuthPackage.ts",
    "gen:ext-pkgs": "ts-node src/genExtPackage.ts",
    "update:readme": "ts-node src/updateReadme.ts",
    "gen:docs": "ts-node src/genDocs.ts",
    "gen:ext-docs": "ts-node src/genExtDocs.ts",
    "update:package-list": "ts-node src/updateRootPackageList.ts",
    "update:package-info": "ts-node src/updateRootPackageInfo.ts",
    "update:package": "npm run update:package-list && npm run update:package-info",
    "embed:docs": "ts-node src/embeddings/embedDocs.ts",
    "embed:query": "ts-node src/embeddings/queryDocs.ts",
    "workflow:packagefox": "ts-node src/handleWorkflow.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.10",
    "@ai-sdk/google": "^1.2.12",
    "@microfox/serpapi": "1.0.2",
    "@microfox/tavily": "1.0.2",
    "@octokit/rest": "^21.1.1",
    "@supabase/supabase-js": "^2.49.4",
    "ai": "^4.2.0",
    "dedent": "^1.5.3",
    "dotenv": "^16.4.5",
    "glob": "^11.0.1",
    "jsdom": "^26.1.0",
    "octokit": "^4.1.3",
    "puppeteer": "^24.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.19",
    "diff": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
